<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainController">
   <children>
      <Label layoutX="320.0" layoutY="40.0" prefHeight="20.0" prefWidth="35.0" text="User:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="lbl_login" layoutX="361.0" layoutY="40.0" prefHeight="20.0" prefWidth="191.0" text="Login" textFill="#049f45">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="btn_refresh" layoutX="555.0" layoutY="103.0" mnemonicParsing="false" onAction="#refreshMessage" text="Refresh">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="22.0" layoutY="75.0" text="New message:">
         <font>

            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="lbl_warning" layoutX="90.0" layoutY="137.0" prefHeight="18.0" prefWidth="161.0" text="Message is not sended" textFill="#ea0707" visible="false" />
      <ComboBox fx:id="cmbtn_users" layoutX="60.0" layoutY="106.0" prefHeight="26.0" prefWidth="206.0" />
      <TextArea fx:id="txt_message" layoutX="60.0" layoutY="161.0" prefHeight="290.0" prefWidth="271.0" />
   </children>

      <Label layoutX="22.0" layoutY="108.0" text="To:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="22.0" layoutY="151.0" text="Text:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
